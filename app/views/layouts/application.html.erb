<!DOCTYPE html>
<html>

<head>
    <title>EventMgmt</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= link_to  "Go to home page", root_path %>
  <% if logged_in? %>
    <p class="control">
      <%= link_to current_user.username, class: "button is-info" %>
    </p>
    <p>
      <%= link_to "Logout", sessions_destroy_path, method: :delete, class:"button is-info" %>
    </p>
  <% else %>
    <p class="control">
      <%= link_to 'Sign In', sessions_new_path, class: "button is-info" %>
    </p>
    <p class="control">
      <%= link_to 'Sign Up', new_user_path, class: "button is-info" %>
    </p>
  <% end %>

    <%= yield %>
</body>

</html>